    <description></description>
    <display-name>demo1Servlet</display-name>
    <servlet-name>demo1Servlet</servlet-name>
    <servlet-class>controller.demo1Servlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>demo1Servlet</servlet-name>
    <url-pattern>/demo1Servlet</url-pattern>
  </servlet-mapping>
</web-app>