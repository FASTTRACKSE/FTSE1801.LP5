<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>QuanLySinhVien</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<description></description>
		<display-name>SinhVienServlet</display-name>
		<servlet-name>SinhVienServlet</servlet-name>
		<servlet-class>controller.SinhVienServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SinhVienServlet</servlet-name>
		<url-pattern>/SinhVienServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>AddSvServlet</display-name>
		<servlet-name>AddSvServlet</servlet-name>
		<servlet-class>controller.AddSvServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddSvServlet</servlet-name>
		<url-pattern>/AddSvServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>UpdateSvServlet</display-name>
		<servlet-name>UpdateSvServlet</servlet-name>
		<servlet-class>controller.UpdateSvServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateSvServlet</servlet-name>
		<url-pattern>/UpdateSvServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>DeleteSvServlet</display-name>
		<servlet-name>DeleteSvServlet</servlet-name>
		<servlet-class>controller.DeleteSvServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteSvServlet</servlet-name>
		<url-pattern>/DeleteSvServlet</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>encodeText</filter-name>
		<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodeText</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>